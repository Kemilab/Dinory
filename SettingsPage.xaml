<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Dinory.SettingsPage">
    <VerticalStackLayout>
        <Label Text="Settings" 
                   FontSize="Large" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Start"
                   VerticalOptions="Center"
                   Margin="50"/>
        <HorizontalStackLayout>
                <Label x:Name="Music"
                        Text="Music"
                       FontSize="Subtitle"
                       Margin="10"/>
                <Switch x:Name="AudioSwitch" Toggled="OnAudioSwitchToggled"/>
                <Button Text="Exit the game"
                     FontSize="Subtitle"
                     Padding="15, 5"
                     CornerRadius="15"
                     Margin="150,0"
                     Clicked="OnClickExit"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
</toolkit:Popup>