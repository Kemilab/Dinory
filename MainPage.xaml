<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Dinory.MainPage">

    <Grid Padding="10"
          BackgroundColor="AliceBlue"
          RowDefinitions="100,Auto,Auto,Auto"
          ColumnDefinitions=".2*,.2*,.2*,.2*,.2*">
        <Button Grid.Row="2"
                Grid.Column="2"
                Text="Zaigraj"
                Clicked="OnClickStartGame"/>

        <Button Grid.Row="3"
                Grid.Column="2"
                Text="Izađi iz igre"
                Clicked="OnClickCloseGame"/>

        <Button Grid.Row="4" Grid.Column="3" Text="Zvuk" Clicked="ButtonClicked" BackgroundColor="Red" />
    </Grid>
</ContentPage>
