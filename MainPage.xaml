<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dinory.MainPage"
             BackgroundImageSource="background.png">

    <VerticalStackLayout Spacing="80"
                         VerticalOptions="Start"
                         HorizontalOptions="Center">
        <Image Source="logo.png"
               BackgroundColor="Transparent"
               MaximumHeightRequest="500"
               HeightRequest="325"
               WidthRequest="700"
               Aspect="AspectFit"
               Margin="50"/>
        <Button Text="Press to start"
                CornerRadius="15"
                WidthRequest="300"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="15"
                TextColor="#9F5E33"
                BackgroundColor="#FFD314"
                BorderColor="#9F5E33"
                BorderWidth="6"
                Clicked="OnClickStartGame"/>
    </VerticalStackLayout>
</ContentPage>
